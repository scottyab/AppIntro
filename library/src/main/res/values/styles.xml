<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">14dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:textColor">@color/app_intro_bottom_button_text</item>
    </style>

    <style name="NextButton" parent="BottomButtonStyle">
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="DoneButton" parent="BottomButtonStyle">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="SkipButton" parent="BottomButtonStyle">
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="IntroTitleTextStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/app_intro_fragment_title_text</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="IntroDescriptionTextStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/app_intro_fragment_description_text</item>
        <item name="android:paddingLeft">64dp</item>
        <item name="android:paddingRight">64dp</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>